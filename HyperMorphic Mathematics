   def test_derivative_and_integral():
        # Define a test function: f(z) = z.exp() = e^z
        def f(z):
            return z.exp()
        
        # Create a HyperMorphicNumber instance
        z = HyperMorphicNumber(mpc(0, 0), linear_phi, constant_psi)  # z = 0
        
